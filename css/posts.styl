#posts_wrapper
  h2
    color: color_d
#posts
  padding-top: 2em
  a
    text-decoration: none
    color: color_d
  > ul
    > li
      margin-bottom: 4em
      > a > h3
          font-size: 28px
          padding-bottom: 0.3em
          margin-bottom: 0.7em
      > p
        font-size: 18px
        padding-bottom: 0.2em
      > img
        display: block
        max-height: 400px
        width: auto
      > .date
        line-height: 36px
