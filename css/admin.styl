[ng-cloak]
  display: none

#admin
  margin-top: 2em

#edit-post
  .raw-json
    max-height: 10000px
    &.ng-hide
      max-height: 0
      margin: 0
      border: 0
      padding: 0
      overflow: hidden
      display: block!important
    &.ng-hide-add.ng-hide-add-active
    &.ng-hide-remove.ng-hide-remove-active
      transition: 0.5s ease-in-out max-height

.alert
  &.ng-enter, &.ng-leave
    -webkit-transition: 0.5s linear all
    transition: 0.5s linear all
  &.ng-enter.ng-enter-active, &.ng-leave
    opacity: 1
  &.ng-enter, &.ng-leave.ng-leave-active
    opacity: 0

footer
  margin: 2em
  padding: 2em
